@model List<UserRoleModel>
@{
    ViewData["Title"] = "사용자 권한 할당";
    var roleId = ViewBag.roleId; 
}
<!-- asp-action을 추가하면 안된다. -->
<form method="post" asp-action="EditUserInRole">
    <div class="card">
        <div class="card-header">
            <h4>현재 사용자 권한 할당/삭제</h4>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="갱신" class="btn btn-sm btn-primary"
                   style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId"
               class="btn btn-sm btn-secondary" style="width:auto">취소</a>
        </div>
    </div>
</form>