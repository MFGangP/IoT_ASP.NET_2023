@model ASPNET02_WebApp.Models.Board

@{
    ViewData["Title"] = "게시글 삭제";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">게시판 글삭제</h2>
        </div>
        <div class="col-4 text-end">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h5 class="text-warning">삭제하시겠습니까?</h5>
        </div>
    </div>
</div>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md">
            <!-- 이거 반드시 바꿔야한다 안바꾸면 큰일남-->
            <form asp-action="DeletePost">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*<div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" readonly/>
                </div>*@
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Contents" class="control-label"></label>
                    @*<span asp-validation-for="Contents" class="text-danger"></span>*@
                    <!-- Delete의 textarea가 Trumbowyg 에디터 때문에 readonly가 안됨. -->
                    @*<textarea asp-for="Contents" class="form-control editor" rows="10" readonly></textarea>*@
                    <p>
                        @Html.Raw(Model.Contents)
                    </p>
                </div>
                <div class="form-group text-end">
                    <button type="submit" value="삭제" class="btn btn-sm btn-warning">
                        <span class="bi bi-trash3-fill"></span>&nbsp;삭제
                    </button>
                    <a asp-controller="Board" asp-action="Index" class="btn btn-sm btn-success">
                        <i class="bi bi-plus-square"></i>&nbsp;목록
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
