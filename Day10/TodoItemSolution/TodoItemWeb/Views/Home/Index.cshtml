@{
    ViewData["Title"] = "할 일 리스트";
}

<div class="text-center">
    <!-- 전체 리스트 -->
    <div class="main-content">
        <h4 clalss="display-4">할 일 리스트</h4>
        <ul id="todoItems"></ul>
    </div>
    <!-- 검색 리스트 -->
    <div>
        @*특징, form태그도 없고 submit 버튼도 없음*@
        <label for="Id">Id</label>
        <input type="text" id="Id" size="5" />
        <input type="button" value="Search" id="btnSearch" />
        <p id="todoItem"></p>
    </div>
    <!-- 새 할 일 추가 영역 -->
    <div>
        <label for="Title">타이틀</label>
        <input type="text" id="Title"/>
        <label for="IsComplete">완료 여부</label>
        <select id="IsComplete">
            <option value="1">true</option>
            <option value="0">false</option>
        </select>
        <input type="button" value="Insert" id="btnInsert"/>
        <p id="result"></p>
    </div>
</div>
